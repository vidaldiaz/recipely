<h2>{{currentRecipe.recipeName}}</h2>


<div class="detailed View">
  <img src="{{currentRecipe.recipePath}}" alt="recipe image">
  <h3>Ingredients:</h3>
  <ul>
    {{#each currentRecipe.ingredients}}
    <li>{{this}}</li>
    {{/each}}
  </ul>
  <a href="{{currentRecipe.recipeSite}}">Click to Get Instructions</a>
  <br>
  <br>
  <a href="/comments/add/{{currentRecipe._id}}"><button>Add Comment</button></a>
</div>
<br>

<div>
  {{#each comments}}
  <p>{{this.comment}}</p>
  <p>{{this.user.name}}</p>
  <a href="/comments/edit/{{this.id}}"><button>Edit</button></a>
  <br>
  <a href="/comments/delete/{{this.id}}"><button>Delete</button></a>
  {{/each}}
</div>