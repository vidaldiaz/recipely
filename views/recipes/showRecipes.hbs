<div class="asked-for">
  <h3>You asked for: </h3>
  {{#each ingredientsArray}}
  <span class="ingredient-result">{{this}} </span>
  {{/each}}
</div>

<div class="result">
  <h3 class="found-recipes">We found {{counter}} recipes!</h3>
</div>

<div class="fullMatches">

  {{#each fullMatchesUnique}}
  <div class="recipe-show">
    <hr>
    <img src="{{recipeImage}}" alt="recipe image" class="recipe-photo">
    <a href="/recipes/details/{{id}}">
      <h5 class="recipe-name">{{recipeName}}</h5>
    </a>
  </div>
  {{/each}}

</div>

<div class="related-matches">
  <h4>Related Recipes</h4>
  <div class="semiMatches">

    {{#each semiMatchesUnique}}
    <a href="/recipes/details/{{id}}"><span>{{recipeName}}</span></a>
    {{/each}}
  </div>
</div>